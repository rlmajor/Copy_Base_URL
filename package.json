{
  "name": "project-name",
  "version": "1.1",
  "scripts": {
    "test": "jest ---coverage --verbose"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "devDependencies": {
    "jest": "^27.0.0",
    "jest-sonar-reporter": "^2.0.0"
  }
}
